{% extends "../layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

    {% call card.render('', 'order-details container') %}

    <div class="info">

        <div class="buyer">
            <h4>Comprador</h4>

            <h5>Dados pessoais</h5>
            <div class="name">{{ order.buyer.name }}</div>
            <div class="cpf-cnpj">{{ order.buyer.formattedCpfCpnj }}</div>

            <h5>Contato</h5>
            <div class="email">{{ order.buyer.email }}</div> 

            <h5>Endereço</h5>
            <div class="address">{{ order.buyer.address }}</div>
            <div class="cep">{{ order.buyer.formattedCep }}</div>
        </div>

        <div class="seller">
            <h4>Vendedor</h4>

            <h5>Dados pessoais</h5>
            <div class="name">{{ order.seller.name }}</div>
            <div class="cpf-cnpj">{{ order.seller.formattedCpfCpnj }}</div>
            
            <h5>Contato</h5>
            <div class="email">{{ order.seller.email }}</div> 

            <h5>Endereço</h5>
            <div class="address">{{ order.seller.address }}</div>
            <div class="cep">{{ order.seller.formattedCep }}</div>
        </div>
        
        <div class="status {{ order.status }}">
            <h2>{{ order.formattedStatus }}</h2>

            <p>{{ order.formattedUpdatedAt }}</p>
        </div>
        
    </div>

    <div class="product">
        <img src="{{ order.product.img }}" alt="Imagem do produto {{ order.product.name }}">

        <p class="name">{{ order.product.name }}</p>
        <p class="price">
            {{ order.formattedPrice }} <br>
            <span class="quantity">x{{ order.quantity }}</span>
        </p>
    </div>

    <div class="total">
        <span>Total</span> {{ order.formattedTotal }}
    </div>

    {% endcall %}

{% endblock content %}