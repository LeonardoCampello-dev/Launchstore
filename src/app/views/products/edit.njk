{% extends "../layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

    {% call card.render('Editar Produto', 'edit-product container') %}

    <form action="/products?_method=PUT" method="POST" enctype="multipart/form-data">

    <div class="fields">

    {% include "products/fields.njk" %}
        
        <input 
            type="hidden" 
            name="id" 
            value="{{ product.id }}"
        >
        
    </div>
    
    <button 
        class="button edit" 
        type="submit"
        onclick="Validate.allFields(event)"
    >Salvar</button>
    
    </form>

    <form action="/products?_method=DELETE" id="form-delete" method="POST">

        <input type="hidden" name="id" value="{{ product.id }}">
        <button class="button delete" type="submit">Deletar</button>

    </form>
    
    {% endcall %}

{% include "products/confirm.njk" %}

{% endblock content %}