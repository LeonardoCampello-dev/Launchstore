    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>Launchstore</h1>
                <h2>Compra e venda</h2>
            </div>
        </a>

        <form action="/products/search" class="search" method="GET">
            <input type="text" name="filter" placeholder="Buscar por Produtos" {% if search.term %} value="{{ search.term }}" {% endif %}>
        </form>

        <nav class="primary">
            <ul>
                
                <li>
                    <a href="/ads/create">
                        <i class="material-icons">add</i>
